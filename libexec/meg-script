#!/usr/bin/env bash
# Usage: meg script
# Summary: Run a script inside the RubyGems.org Rails directory
# Help: SSH directly RubyGems.org and run a script

set -e

exec meg-ssh $MEG_APP_HOST "cd /applications/rubygems/current && sudo /usr/bin/chpst -u deploy:deploy -e /etc/sv/unicorn/env ./script/$@"
